{
  "compilerOptions": {
    "target": "es2020",
	"module": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noUncheckedIndexedAccess": true,
	"baseUrl": ".",
    "paths": {
			"$src": [
				"src"
			],
			"$src/*": [
				"src/*"
			],
			"$components": [
				"src/components"
			],
			"$components/*": [
				"src/components/*"
			],
			"$types": [
				"src/types"
			],
			"$types/*": [
				"src/types/*"
			],
			"$lib": [
				"src/lib"
			],
			"$lib/*": [
				"src/lib/*"
			],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}